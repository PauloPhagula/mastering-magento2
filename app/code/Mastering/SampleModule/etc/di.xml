<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

  <type name="Magento\Framework\Console\CommandList">
    <arguments>
      <argument name="commands" xsi:type="array">
        <item name="masteringAddItem" xsi:type="object">Mastering\SampleModule\Console\Command\AddItem</item>
      </argument>
    </arguments>
  </type>

  <preference for="Mastering\SampleModule\Api\Data\ItemInterface"
              type="Mastering\SampleModule\Model\Item" />

  <preference for="Mastering\SampleModule\Api\ItemRepositoryInterface"
              type="Mastering\SampleModule\Model\ItemRepository" />

  <virtualType name="UniqueNameGridDataProvider" type="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider">
   <arguments>
     <argument name="collection" xsi:type="object" shared="false">Company\Module\Model\Resource\Item\Collection</argument>
     <argument name="filterPool" xsi:type="object" shared="false">UniqueNameItemIdFilterPool</argument>
   </arguments>
  </virtualType>

  <virtualType name="UniqueNameItemIdFilterPool" type="Magento\Framework\View\Element\UiComponent\DataProvider\FilterPool">
    <arguments>
      <argument name="appliers" xsi:type="array">
        <item name="regular" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\RegularFilter</item>
        <item name="fulltext" xsi:type="object">Magento\Framework\View\Element\UiComponent\DataProvider\FulltextFilter</item>
      </argument>
    </arguments>
  </virtualType>

  <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
    <arguments>
      <argument name="collections" xsi:type="array">
        <item name="mastering_items_grid_data_source" xsi:type="string">Mastering\SampleModule\Model\ResourceModel\Item\Grid\Collection</item>
      </argument>
    </arguments>
  </type>
</config>
